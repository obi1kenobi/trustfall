TestGraphQLQuery (
    schema_name: "numbers",
    query: r#"
{
    Two {
        vowelsInName @filter(op: "=", value: ["$arg"])

        # There are incompatible demands for the type of `$arg` here:
        # it needs to be a `[String]` to match the filter,
        # and an `Int!` to fit the transform. This is a frontend error.
        successor
            @fold
            @transform(op: "count")
            @transform(op: "+", value: ["$arg"])
            @filter(op: ">", value: ["$num"])
    }
}"#,
    arguments: {
        "arg": String(""),
        "num": Int64(0),
    },
)
