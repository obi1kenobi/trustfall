# Top stories on HackerNews that have a minimum score and karma
query {
  Top(max: 100) {
    ... on Story {
      title @output
      byUsername @output
      url @output
      score @output @filter(op: ">=", value: ["$minScore"])
      storyUrl: ownUrl @output

      byUser {
        karma @output @filter(op: ">=", value: ["$minKarma"])
      }
    }
  }
}

vars:
{
  "minScore": 200,
  "minKarma": 1000
}
